<h1>Mainpage</h1>
<p>There will be links to all the required links in the website.</p>

<h2>Generic Login Form</h2>

<%= form_tag("/loginperson", method: "post") do %>

<%= text_field_tag(:email, "", :placeholder => "Email ID") %>

<%= password_field_tag(:password, "", :placeholder => "Password") %>

<%= submit_tag("Login", :class => "btn btn-success") %>

<% end %>

<% if student_signed_in? %>

<p> Student is signed in </p>
<%= link_to "Signout", destroy_student_session_path, method: :delete %>

<% end %>

<% if mentor_signed_in? %>

<p> Mentor is signed in </p>
<%= link_to "Signout", destroy_mentor_session_path, method: :delete %>

<% end %>

